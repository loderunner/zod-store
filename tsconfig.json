{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "vitest.d.ts"],
  "exclude": ["node_modules", "dist"]
}
